{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}

<div class="container mt-5 pt-5">

    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ album.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ album.content }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        {% for img in album.images %}
        <div class="m-4 border p-2">
            <img src="{{asset('uploads/' ~ img.name)}}" alt="" class="" width="130">
           
        </div>
        {% endfor %}
    </div>

    
    <a href="{{ path('album_edit', {'id': album.id}) }}" class="btn btn-primary">edit</a>
    
    {{ include('album/_delete_form.html.twig') }}

    <a href="{{ path('album_index') }}" class="btn btn-info mt-3">back to list</a>

    </div>
{% endblock %}
