{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}

<div class="container mt-5 pt-5">

    <h1>Détails de l'Album: "{{album.title}}"</h1>

    <a href="{{ path('album_index') }}" class="btn btn-info my-3">
        <i class="fas fa-arrow-circle-left mr-2"></i>Retour à la liste</a>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ album.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ album.content }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        {% for img in album.images %}
        <div class="m-4 border p-2">
            <img src="{{asset('uploads/' ~ img.name)}}" alt="" class="" width="130">
           
        </div>
        {% endfor %}
    </div>

    <div class="row align-items-center">
        <a href="{{ path('album_edit', {'id': album.id}) }}" class="btn btn-primary mt-3 mr-4">Modifier</a>

        {{ include('album/_delete_form.html.twig') }}
    </div>
    
    </div>
{% endblock %}
